<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anonymous.client2706.CheckInOut"
    android:background="#ffffff">


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/InOutButton"
        android:id="@+id/button"
        android:onClick="sendMessage"
        android:background="@drawable/butshadow"
        android:layout_below="@+id/show_status"
        android:layout_centerHorizontal="true"
         />


    <TextView
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="in/out"
        android:id="@+id/ack"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="@dimen/abc_config_prefDialogWidth"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="show status"
        android:id="@+id/show_status"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="54.5dp"
        android:id="@+id/imageView"
        android:background="@drawable/globant"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
