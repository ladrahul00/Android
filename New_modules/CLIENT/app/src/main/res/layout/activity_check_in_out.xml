<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.globant.client.CheckInOut"
    >

    <ImageView
        android:layout_width="125dp"
        android:layout_height="36dp"
        android:id="@+id/imageView"
        android:background="@drawable/globantlogo1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <com.globant.client.ProgressWheel
        android:id="@+id/pw_spinner1"
        android:layout_width="200dp"
        android:background="@drawable/butshadow"
        android:layout_height="200dp"
        android:layout_below="@+id/employeename"
        android:layout_centerHorizontal="true" />

    <!--check again -->

    <!-- <Button
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:text="IN/OUT"
         android:id="@+id/button"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:onClick="sendMessage"
         android:clickable="true"
         android:textColor="#000000"
         android:ellipsize="none"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Employee Name"
        android:id="@+id/employeename"
        android:textColor="#222222"
        android:textSize="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logout"
        android:background="@drawable/button"
        android:onClick="logOut"
        android:textColor="#222222"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="94dp"
        android:id="@+id/imageView2"
        android:background="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Message"
        android:id="@+id/Message"
        android:layout_below="@+id/pw_spinner1"
        android:layout_centerHorizontal="true"
        android:textColor="#222222" />


</RelativeLayout>
