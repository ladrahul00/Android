<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.globant.client.CheckInOut"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/errorText"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/imageView" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/imageView"
        android:background="@drawable/globantlogo1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <com.globant.client.ProgressWheel
        android:id="@+id/pw_spinner1"
        android:layout_width="200dp"
        android:background="@drawable/circular_progress_bar"
        android:layout_height="200dp"
        android:layout_centerInParent="true" />

   <!-- <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="IN/OUT"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendMessage"
        android:clickable="true"
        android:textColor="#000000"
        android:ellipsize="none"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Checked In/Out"
        android:id="@+id/show_status"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change User/Log Out"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_above="@+id/employeeId"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Employee ID"
        android:id="@+id/employeeId"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/errorText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
