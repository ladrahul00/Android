<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF">


    <Button
        android:layout_width="@dimen/abc_search_view_text_min_width"
        android:layout_height="wrap_content"
        android:text="View Log"
        android:id="@+id/button"
        android:onClick="view_log"
        android:background="#8BC34A"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/abc_search_view_text_min_width"
        android:layout_height="wrap_content"
        android:text="Add Employees"
        android:id="@+id/button2"
        android:onClick="add_employee"
        android:background="#8BC34A"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="@dimen/abc_search_view_text_min_width"
        android:layout_height="wrap_content"
        android:text="Remove Employees"
        android:id="@+id/button3"
        android:layout_marginTop="46dp"
        android:onClick="remove_employee"
        android:background="#8BC34A"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/globantlogo1"
        android:layout_toEndOf="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
