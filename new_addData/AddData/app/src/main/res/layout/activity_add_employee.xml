<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anonymous.adddata.addemployeee"
    android:background="#FFFFFF">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/empname"
        android:textColor="#000000"
        android:hint="Employee Name -"
        android:textColorHint="#aaaaaa"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/EmployeeID"
        android:textColor="#000000"
        android:layout_below="@+id/empname"
        android:layout_marginTop="30dp"
        android:textColorHint="#aaaaaa"
        android:hint="Employee ID -"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/macadd"
        android:layout_centerVertical="true"
        android:layout_below="@+id/EmployeeID"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:hint="Mac Address - "
        android:textColorHint="#aaaaaa"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cardno"
        android:textColor="#000000"
        android:layout_below="@+id/macadd"
        android:layout_marginTop="30dp"
        android:textColorHint="#aaaaaa"
        android:hint="Card No -"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/button5"
        android:onClick="addData"
        android:background="@drawable/add"
        android:layout_below="@+id/cardno"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD EMPLOYEE DATA"
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />


</RelativeLayout>
